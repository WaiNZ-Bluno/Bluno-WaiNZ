<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/button</item>
    </style>


    <style name="buttonStyle" parent="android:Widget.Button">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">5dp</item>
    </style>

	<style name="riverWatchButtonStyle" parent="@style/buttonStyle">
		<item name="android:textColor">@color/White</item>
		<item name="android:background">@drawable/button</item>
    </style>

	<style name="backButtonStyle" parent="@style/buttonStyle">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:text">@string/back</item>
    </style>

	<style name="titleHeading">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/divider_gray</item>
        <item name="android:background">@drawable/header_style</item>
    </style>


</resources>
